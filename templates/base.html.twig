<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="{{asset('style/logo.png')}}">
		<script src="https://kit.fontawesome.com/556e4f6811.js" crossorigin="anonymous"></script>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{asset('style/style.css')}}">
		{% endblock %}

		{% block javascripts %}{% endblock %}
	</head>


	<body>

		{% if app.user  %}

			<header>
				<a href="/logout">
					<button>
						<i class="fa-solid fa-right-from-bracket"></i>
						logout
					</button>
				</a>
			</header>

		{% else %}

			<header>
				<a href="/login">
					<button>
						<i class="fa-solid fa-right-from-bracket"></i>
						log in
					</button>
				</a>

				<p>or</p>

				<a href="/login">
					<button>
						sign in
					</button>
				</a>
			</header>

		{% endif %}


		{% block body %}{% endblock %}
	</body>
</html></body></html>
